@{
    ViewData["Title"] = "Index";
}

<section class="corps">
    <div class="index-search">
        <div class="search-bar">
            <p class="index-text">Trouvez les liens de propriétés entre vos marques préférées !</p>
            <input type="search" id="index-search-value" name="s" placeholder="Entrez un nom de produit, de marque ou d'entreprise" value="@ViewData["SearchText"]">
            <input type="submit" id="index-search-button" value="Rechercher">
            @if (ViewData["error"] != null) {
                <p class="index-error">@ViewData["error"]</p>
            }
        </div>
    </div>

    <partial name="_Ad" />

    <script>
        window.onload = () => {
            const sendForm = () => {
                const value = document.getElementById('index-search-value').value;

                if (value.length < 2) {
                    return;
                }

                window.location.href = '/search/' + value
            };

            document.getElementById('index-search-button').addEventListener('click', sendForm);
            document.getElementById('index-search-value').addEventListener('keyup', (e) => {
                console.log(e);
                if (e.key === "Enter") {
                    sendForm();
                }
            });
        };
    </script>
</section>